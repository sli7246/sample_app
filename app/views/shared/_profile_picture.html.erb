<% if partial_user.avatar.exists? %>
	<!-- Use default gavatar/facebook/linkedin photos if no custom uploaded file exists -->
	<%= image_tag partial_user.avatar.url(partial_size), :class => 'profile_picture' %>
<% else %>
	<%= gravatar_for partial_user, :class => 'profile_picture', size: partial_size == :thumb ? 60 : (partial_size == :tiny ? 30 : 100) %>
<% end %>