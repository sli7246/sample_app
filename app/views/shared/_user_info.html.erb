<a href="<%= user_path(current_user) %>">
	<% if current_user.avatar.exists? %>
		<!-- Use default gavatar/facebook/linkedin photos if no custom uploaded file exists -->
		<%= image_tag current_user.avatar.url(:small), :class => 'profile_picture' %>
	<% else %>
		<%= gravatar_for current_user, size: 70, :class => 'profile_picture' %>
	<% end %>
</a>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<span>
  <%= pluralize(current_user.microposts.count, "micropost") %>
</span>